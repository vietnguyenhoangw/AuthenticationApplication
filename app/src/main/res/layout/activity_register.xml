<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_head_bg_flv" />

        <TextView
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="Register" />


        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your User Name" />

            <EditText
                android:textColor="#858585"
                android:layout_below="@id/textView4"
                android:id="@+id/edtUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_login_input"
                android:drawableLeft="@drawable/ic_group_24dp"
                android:drawablePadding="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="12dp" />

            <TextView
                android:layout_below="@id/edtUser"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password" />

            <EditText
                android:textColor="#858585"
                android:id="@+id/edtPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtUser"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_login_input"
                android:drawableLeft="@drawable/ic_lock_24dp"
                android:drawablePadding="10dp"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="12dp" />

            <TextView
                android:layout_below="@id/edtPass"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password" />

            <EditText
                android:textColor="#858585"
                android:id="@+id/edtPass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtPass"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_login_input"
                android:drawableLeft="@drawable/ic_lock_24dp"
                android:drawablePadding="10dp"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnAccept"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtPass"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/background_button"
                android:text="Accept"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>
    </FrameLayout>

</LinearLayout>